
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-6">
        <div id="chartContainer" style="height: 570px; width: 84%;" class="mr-auto ml-auto"></div>
    </div>
    <div class="col-md-6">
        <div id="chartContainer1" style="height: 570px; width: 84%;" class="mr-auto ml-auto"></div>
    </div>
</div>

@section scripts {
    <script>
		window.onload = function () {

		var chart = new CanvasJS.Chart("chartContainer", {
		theme: "light2", // "light1", "light2", "dark1", "dark2"
		exportEnabled: true,
		animationEnabled: true,
		title: {
            text: "-----The Number Of Customers Looking For And Selling Homes ",
		fontSize: 20
		},
		data: [{
		type: "pie",
		startAngle: 160,
		toolTipContent: "<b>{label}</b>: {y}",
		indexLabel: "{label} - {y}",
		dataPoints: @Html.Raw(ViewBag.DataPoints)
		}]
		});
		chart.render();

		var chart1 = new CanvasJS.Chart("chartContainer1", {
		theme: "light2", // "light1", "light2", "dark1", "dark2"
		exportEnabled: true,
		animationEnabled: true,
		title: {
            text: "-----The Number Of Properties By Property Type",
		fontSize: 20
		},
		data: [{
		type: "pie",
		startAngle: 160,
		toolTipContent: "<b>{label}</b>: {y}",
		indexLabel: "{label} - {y}",
		dataPoints: @Html.Raw(ViewBag.DataPoints1)
		}]
		});
		chart1.render();
		}

    </script>

    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>

}